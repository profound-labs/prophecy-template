$dark-mode-text = #ddd

body.calibre-viewer-dark-colors
  background-color: transparent
  p
    color: $dark-mode-text
  b.button
    text-shadow: 1px 0 0 $button-shadow
    color: $dark-mode-text
  a:link
    color: $dark-mode-text
    -webkit-text-fill-color: $dark-mode-text
    border-bottom: 1px dashed $dark-mode-text
  a:visited
    color: $dark-mode-text
    -webkit-text-fill-color: $dark-mode-text

  p,
  ul,
  ol,
  li,
  dl,
  dt,
  dd,
  footer,
  div.verse .attribution,
  table.table th,
  table.table td,
  figcaption,
  caption
    color: $dark-mode-text

  code,
  kbd,
  pre
    color: $dark-mode-text

  ul > li::before
    color: $dark-mode-text

  ul ul > li::before
    color: $dark-mode-text

  ul ul ul > li::before
    color: $dark-mode-text

  ul ul ul ul > li::before
    color: $dark-mode-text

  h1
    color: $dark-mode-text

  h2
    color: $dark-mode-text

  h3
    color: $dark-mode-text

  h4
    color: $dark-mode-text

  h5
    color: $dark-mode-text

  h1.chapter-title
    color: $dark-mode-text

  h1.chapter-title .subtitle
    color: $dark-mode-text

  h1.chapter-title em
    color: $dark-mode-text

  blockquote
    color: $dark-mode-text

  blockquote footer .context
    color: $dark-mode-text

  .blockquote.opening-verse blockquote > p:first-child::before
    color: $dark-mode-text

  caption, figcaption
    color: $dark-mode-text
